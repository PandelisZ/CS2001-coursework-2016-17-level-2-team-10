<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asimghafoor.groupproject.MainActivity"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/android_title"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/android_trending"
        android:id="@+id/imageView8"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/searchView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="13dp"
        android:id="@+id/textView2"
        android:background="@drawable/border"
        android:layout_below="@+id/imageView8"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <TextView
        android:text="Movie Poster"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="@drawable/border"
        android:layout_toStartOf="@+id/textView4"
        android:layout_toLeftOf="@+id/textView4" />

    <TextView
        android:text="Reel Rating - "
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="IMDB - "
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Rotten Tomatoes - "
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Metacritic - "
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/searchView"
        android:background="@drawable/border"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Movie Title (Year)"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:background="@drawable/border"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
